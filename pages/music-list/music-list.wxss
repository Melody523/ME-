.music-container {
  background-color: #f5f5f5;
}
.music-container .music-header {
  padding: 20rpx 28rpx 0 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 48rpx;
}
.music-container .music-header .title {
  font-size: 16px;
  height: 48rpx;
  display: flex;
  align-items: center;
}
.music-container .music-header .title .name {
  margin-bottom: 4rpx;
}
.music-container .music-header .title .title-icon {
  height: 40rpx;
  background-color: #000;
  width: 8rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.music-container .music-header .nav {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #9e9e9e;
  background-color: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 40rpx;
  width: 128rpx;
  height: 48rpx;
  font-size: 13px;
  color: #757575;
}
.music-container .music-header .nav .nav-icon {
  width: 16rpx;
  height: 16rpx;
  box-sizing: border-box;
  border-top: 1px solid #757575;
  border-right: 1px solid #757575;
  transform: rotate(45deg);
}
.music-container .mask {
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
}
.music-container .nav-wrapper {
  transform: translateX(100%);
  width: 90%;
  height: 100%;
  background: #f5f5f5;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 10;
}
.music-container .nav-wrapper .nav-header {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  background-color: #fff;
}
.music-container .nav-wrapper .nav-header .nav-cancel {
  color: #9e9e9e;
  font-size: 32rpx;
  width: 64rpx;
  padding: 0 20rpx;
  border-right: 1px solid #eee;
}
.music-container .nav-wrapper .nav-header .nav-title {
  flex: 1;
  font-size: 32rpx;
  color: #262626;
  text-align: center;
}
.music-container .nav-wrapper .nav-all {
  margin: 0 0 20rpx;
  background-color: #fff;
  color: #3d3d3d;
  font-size: 28rpx;
  width: 100%;
  height: 116rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.music-container .nav-wrapper .nav-all .nav-all-title {
  flex: 1;
  margin: 12rpx;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  box-sizing: border-box;
  border: 1px solid #e1e1e1;
}
.music-container .nav-wrapper .nav-all .active {
  font-weight: 700;
  border: 1px solid #3d3d3d;
}
.music-container .nav-wrapper .nav-body {
  margin: 0 0 20rpx;
  color: #3d3d3d;
  font-size: 28rpx;
  width: 100%;
}
.music-container .nav-wrapper .nav-body .nav-list {
  background-color: #fff;
  margin: 0 0 20rpx;
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.music-container .nav-wrapper .nav-body .nav-list .nav-list-title {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #757575;
  font-size: 16px;
  border-right: 1px solid #e1e1e1;
}
.music-container .nav-wrapper .nav-body .nav-list .nav-list-title .nav-title-icon {
  margin-bottom: 10rpx;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons@2x.ee28a6bf.png);
  background-position: -152rpx -216rpx;
  background-size: 522rpx 470rpx;
  height: 72rpx;
  width: 72rpx;
}
.music-container .nav-wrapper .nav-body .nav-list .nav-list-body {
  flex: 1;
  color: #3d3d3d;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.music-container .nav-wrapper .nav-body .nav-list .nav-list-body .nav-item {
  width: 50%;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  box-sizing: border-box;
  border-bottom: 1px solid #e1e1e1;
  border-right: 1px solid #e1e1e1;
}
.music-container .nav-wrapper .nav-body .nav-list .nav-list-body :nth-last-child(1) {
  border-bottom: none;
}
.music-container .nav-wrapper .nav-body .nav-list .nav-list-body :nth-child(2n) {
  border-right: none;
}
.music-container .nav-wrapper .nav-body .nav-list .nav-list-body .active {
  font-weight: 700;
  border: 1px solid #3d3d3d;
}
.music-container .music-body {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 20rpx 0;
}
.music-container .music-body .music-item {
  margin: 0 0 20rpx;
  width: 328rpx;
  height: 384rpx;
}
.music-container .music-body .music-item .music-img {
  position: relative;
  width: 100%;
  background: url(https://static.missevan.com/assets/m/images/build/album-cover.efe70663.png) no-repeat;
  background-size: contain;
}
.music-container .music-body .music-item .music-img image {
  border-radius: 8rpx;
  width: 293rpx;
  height: 293rpx;
}
.music-container .music-body .music-item .music-img .count {
  text-shadow: 0.5px 0 1px #000;
  position: absolute;
  bottom: 10rpx;
  right: 45rpx;
  display: flex;
  padding-left: 28rpx;
  font-size: 12px;
  color: #fff;
}
.music-container .music-body .music-item .music-img .count .count-icon {
  margin: 8rpx 0 6rpx;
  height: 22rpx;
  width: 26rpx;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons-thumbnails@2x.c71cb7b7.png);
  background-position: 0 -88rpx;
  background-size: 112rpx 110rpx;
}
.music-container .music-body .music-item .title {
  margin-top: 12rpx;
  height: 80rpx;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #616161;
  font-size: 13px;
}
.music-container .loadmore {
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 20rpx auto;
  background-color: #e0e0e0;
  font-size: 14px;
  text-align: center;
  border-radius: 6rpx;
}
