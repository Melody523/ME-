.panel {
  padding-bottom: 10rpx;
  margin: 20rpx auto;
}
.panel .panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  line-height: 40px;
  padding: 0 14px;
}
.panel .panel-header .panel-title {
  font-size: 16px;
  display: flex;
  align-items: center;
}
.panel .panel-header .panel-title .title-icon {
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons-catalog@2x.1144a958.png);
  background-size: 172rpx 172rpx;
  margin-right: 10rpx;
  height: 40rpx;
  width: 40rpx;
}
.panel .panel-header .panel-nav {
  font-size: 14px;
  color: #9e9e9e;
  display: flex;
  align-items: center;
}
.panel .panel-header .panel-nav ::after {
  content: "";
  height: 32rpx;
  width: 32rpx;
  display: block;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons@2x.ee28a6bf.png);
  background-position: -188rpx -112rpx;
  background-size: 522rpx 470rpx;
  margin-left: 10rpx;
}
.panel .panel-body {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.panel .panel-body .panel-item {
  width: 212rpx;
  height: 326rpx;
}
.panel .panel-body .panel-item image {
  width: 212rpx;
  height: 212rpx;
  display: block;
  border-radius: 8rpx;
}
.panel .panel-body .panel-item .item-title {
  color: #616161;
  font-size: 26rpx;
  width: 100%;
  height: 72rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  margin: 8rpx 0;
}
.panel .panel-body .panel-item .detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.panel .panel-body .panel-item .detail .play-times {
  font-size: 11px;
  line-height: 11px;
  color: #bdbdbd;
  display: flex;
  align-items: center;
}
.panel .panel-body .panel-item .detail .play-times .play-times-icon {
  height: 20rpx;
  width: 24rpx;
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons-thumbnails@2x.c71cb7b7.png);
  background-size: 112rpx 110rpx;
  background-position: -58rpx -88rpx;
  margin-right: 6rpx;
}
.panel .panel-body .panel-item .detail .comment {
  font-size: 11px;
  line-height: 11px;
  color: #bdbdbd;
  display: flex;
  align-items: center;
}
.panel .panel-body .panel-item .detail .comment .comment-icon {
  background-image: url(https://static.missevan.com/assets/m/images/build/sprite-icons-thumbnails@2x.c71cb7b7.png);
  background-size: 112rpx 110rpx;
  background-position: -88rpx -54rpx;
  height: 20rpx;
  width: 24rpx;
  margin-right: 6rpx;
}
.panel .panel-body .channel-item {
  width: 320rpx;
  height: 300rpx;
}
.panel .panel-body .channel-item image {
  width: 320rpx;
  height: 212rpx;
  display: block;
  border-radius: 8rpx;
}
.panel .panel-body .channel-item .name {
  margin-top: 6rpx;
  width: 100%;
  height: 80rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 40rpx;
  color: #616161;
  font-size: 13px;
}
